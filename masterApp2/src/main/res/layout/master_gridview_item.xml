<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="225dp"
    android:paddingBottom="4dip"
    android:layout_width="fill_parent"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_bg_layout"
        android:background="@drawable/liebiao_kuang"
        />
    <TextView
        android:id="@+id/ItemImage"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="#FF3300"/>

    <TextView
        android:id="@+id/tv_n_lv"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ItemImage"
        android:text="省保"
        android:textSize="18dp"
        android:textColor="#0fa5ef"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/tv_bq_lv"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8dp"
        android:text="病危"
        android:textSize="18dp"
        android:textColor="#979a9a"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_n_lv"/>

    <TextView
        android:id="@+id/tv_room_bed"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginLeft="14dp"
        android:gravity="center_vertical"
        android:layout_marginTop="22dp"
        android:text="1房088床"
        android:textColor="#0fa5ef"
        android:textSize="22dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/ItemText"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_below="@+id/ItemImage"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="20dp"
        android:text="王田夏"
        android:textColor="#333333"
        android:textSize="18dp"
        android:gravity="center_vertical"/>


    <TextView
        android:id="@+id/tv_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="8dp"
        android:text="女 52岁 02-19"
        android:textSize="16dp"
        android:textColor="#676767"
        android:layout_below="@id/ItemText"/>

    <TextView
        android:id="@+id/tv_p_name"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="6dp"
        android:text="混合型颈椎病"
        android:textSize="16dp"
        android:textColor="#676767"
        android:gravity="center_vertical"
        android:layout_below="@id/tv_sub_title"/>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="8dp"
        android:text="没有"
        android:textSize="16dp"
        android:textColor="#676767"
        android:gravity="center_vertical"
        android:layout_below="@+id/tv_p_name" />

    <TextView
        android:id="@+id/null_bed_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="48dp"
        android:textColor="#676767"
        android:text="空" />


</RelativeLayout>
